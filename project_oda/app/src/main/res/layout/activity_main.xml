<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/splash_back"
            android:text="@string/oda"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/iv_home_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            android:layout_marginEnd="62dp"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClick"
            />

        <ImageView
            android:id="@+id/iv_home_cart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/shopping_cart"
            android:layout_marginEnd="17dp"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClick"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/home_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linear_home"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:onClick="onClick"
            >

            <ImageView
                android:id="@+id/iv_main_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/icon_home"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_main_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_home"
                android:layout_gravity="center"
                android:textColor="@color/splash_back"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"
                android:src="@drawable/group_4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_cate"
                android:layout_gravity="center"
                android:textColor="@color/normal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/fill_213"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_tip"
                android:layout_gravity="center"
                android:textColor="@color/normal"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_mypage"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:onClick="onClick"
            >

            <ImageView
                android:id="@+id/iv_main_mypage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/shape"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_main_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_myPage"
                android:layout_gravity="center"
                android:textColor="@color/normal"
                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="72dp"
        android:background="@android:color/transparent"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbtn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:src="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/floating_buy_now"
            android:elevation="16dp"
            android:textColor="@color/white"
            />


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>