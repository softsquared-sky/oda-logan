<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.SignInActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/splash_back">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onClick"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/btn_sign_in"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/normal"
        android:textAlignment="center"
        android:text="@string/welcome1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/normal"
        android:textAlignment="center"
        android:text="@string/welcome2"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_sign_in_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:textSize="14sp"
        android:singleLine="true"
        android:hint="@string/id"/>

        <Button
            android:id="@+id/btn_duplicate"
            android:layout_width="78dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_duplicate"
            android:text="@string/btn_duplicate"
            android:textColor="@color/normal"
            android:layout_gravity="right"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="17dp"
            />

    </FrameLayout>
</LinearLayout>