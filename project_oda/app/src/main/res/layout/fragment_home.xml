<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".src.main.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                tools:background="@color/splash_back">

                <ImageView
                    android:id="@+id/iv_home_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/arrow_left"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="17dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/chevron_left"
                    />

                <ImageView
                    android:id="@+id/arrow_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="17dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/chevron_right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#80000000"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="17dp"
                    tools:text="자세히 보기  &gt;"
                    />
                
            </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/home_bottom_bar"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_fast"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="17dp"
                android:textColor="@color/catering"
                />

            <TextView
                android:id="@+id/tv_fast_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="14sp"
                tools:text="0개"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="@color/boarder"
                android:clickable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:text="@string/select_all"
                android:textColor="@color/boarder"
                android:layout_marginEnd="15dp"
                />

        </LinearLayout>

            <GridView
                android:id="@+id/gv_home"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </GridView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>